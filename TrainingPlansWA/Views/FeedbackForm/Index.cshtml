        <div id="logo" onclick="slowScroll('#feedback_form_area')">
            <span>MySite</span>
        </div>
        <div class="about">
            <a href="/" title="Главная" onclick="slowScroll('#main')"><i class='bx bx-home-alt-2'></i> Главная</a>
