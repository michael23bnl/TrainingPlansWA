    <div id="feedback_form_area">
        <div class="feedback_form">
            <form method="post" asp-controller="FeedbackForm" asp-action="Check">

                <label for="FormHead" class="form_header"><h3>Ваши отзывы помогают делать сайт лучше</h3></label>
                @* <span asp-validation-for="FullName" class="validation_text"></span>
                <label asp-for="FullName" class="above_input_text"></label>
                <input type="FullName" asp-for="FullName" placeholder="Как к Вам обращаться?" /> *@

                @* <span asp-validation-for="Email" class="validation_text"></span>
                <label asp-for="Email" class="above_input_text"></label>
                <input type="Email" asp-for="Email" placeholder="Ваш Email" /> *@

                <div class="form-floating mb-3">
                    <input type="FullName" asp-for="FullName" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Как к Вам обращаться?" />
                    <label asp-for="FullName" class="form-label"></label>
                    <span asp-validation-for="FullName" class="text-danger"></span> 
                </div>
                
           
                <div class="form-floating mb-3">
                    <input type="Email" asp-for="Email" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Ваш Email" />
                    <label asp-for="Email" class="form-label"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <label for="OptionsHead" class="navigation_text">Как бы Вы оценили предложенные услуги?</label>

                <div class="options">
                    <div class="options__item">
                        <input id="formExcellent" type="radio" value="Excellent" name="mark" class="options__input">
                        <label for="formExcellent" class="options__label"><span class="label_text">Отлично</span></label>
                    </div>
                    <div class="options__item">
                        <input id="formGood" type="radio" value="Good" name="mark" class="options__input">
                        <label for="formGood" class="options__label"><span class="label_text">Хорошо</span></label>
                    </div>
                    <div class="options__item">
                        <input id="formNeutral" checked type="radio" value="Neutral" name="mark" class="options__input">
                        <label for="formNeutral" class="options__label"><span class="label_text">Нейтрально</span></label>
                    </div>
                    <div class="options__item">
                        <input id="formPoor" type="radio" value="Poor" name="mark" class="options__input">
                        <label for="formPoor" class="options__label"><span class="label_text">Плохо</span></label>
                    </div>
                </div>

                <label asp-for="Message" class="navigation_text"></label>
                <textarea name="Message" asp-for="Message" placeholder="Ваше сообщение"></textarea>
                @*<span asp-validation-for="Message"></span>*@

                <input type="submit" value="Отправить" />
            </form>
        </div>
    </div>
