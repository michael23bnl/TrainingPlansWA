        <script>
            /* Loop through all dropdown buttons to toggle between hiding and showing its dropdown content - This allows the user to have multiple dropdowns without any conflict */
            var dropdown = document.getElementsByClassName("dropdown-btn");
            var i;
            for (i = 0; i < dropdown.length; i++) {
                dropdown[i].addEventListener("click", function () {
                    this.classList.toggle("activee");
                    var dropdownContent = this.nextElementSibling;
                    if (dropdownContent.style.display === "block") {
                        dropdownContent.style.display = "none";
                    } else {
                        dropdownContent.style.display = "block";
                    }
                });
            }
        </script>
        <script>
            function show_sidenav_left() { //показать/скрыть левую панель навигации 
                var x = document.getElementById("mySidenavLeft"); //левая панель
                if (x.className === "sidenav_hidden sidenav_left") { //проверяем, спрятана ли левая панель
                    x.className = "sidenav sidenav_left"; //делаем левую панель видимой
                    var y = document.getElementById("mySidenavRight"); //правая панель
                    //далее если до открытия левой панели правая была открыта, то закрываем правую панель
                    if (y.className === "sidenav sidenav_right") { //проверяем, открыта ли правая панель
                        y.className = "sidenav_hidden sidenav_right"; //скрываем правую панель
                    }
                } else { //левая панель открыта
                    x.className = "sidenav_hidden sidenav_left"; //скрываем левую панель
                }
            }
            function show_sidenav_right() { //показать/скрыть правую панель навигации
                var x = document.getElementById("mySidenavRight"); //правая панель
                if (x.className === "sidenav_hidden sidenav_right") { //проверяем, спрятана ли правая панель
