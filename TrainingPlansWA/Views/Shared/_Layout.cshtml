                    //далее если до открытия правой панели левая была открыта, то закрываем левую панель
                    if (y.className === "sidenav sidenav_left") { //проверяем, открыта ли левая панель
                        y.className = "sidenav_hidden sidenav_left"; //скрываем левую панель
                    }
                } else { //правая панель открыта
                    x.className = "sidenav_hidden sidenav_right"; //скрываем правую панель
